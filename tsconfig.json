{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src", // This must be specified if "paths" is.

    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@screens/*": ["screens/*"],
      "@helpers/*": ["helpers/*"],
      "@utils/*": ["utils/*"],
      "@stores/*": ["stores/*"]
    }
  }
}
